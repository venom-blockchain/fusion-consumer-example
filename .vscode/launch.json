    "version": "0.2.0",
    "configurations": [

        {
            "type": "node-terminal",
            "request": "launch",
            "name": "Nest.js: debug server",
            "command": "npm run start:debug",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        },
        {
            "type": "node-terminal",
            "request": "launch",
            "name": "jest: tests",
            "command": "npm run test:e2e-debug",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        }
    ]
}