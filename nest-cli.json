{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "introspectComments": true
        }
      }
    ],
    "assets": [
      { "include": "**/*.otf", "watchAssets": true },
      { "include": "**/*.csv", "watchAssets": true },
      { "include": "**/*.known-assets.json", "watchAssets": true }
    ]
  }
}
